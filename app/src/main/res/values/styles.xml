    <!-- setting -->


    <style name="Login.EditText" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/text_color_ff999999</item>
        <item name="colorControlActivated">@color/colorAccent</item>
    </style>

    <style name="detail_action_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/common_45dp</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:background">@drawable/common_action_button_bg_selector</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/t18sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="recommend_stages_search_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/common_45dp</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_marginBottom">@dimen/common_5dp</item>
        <item name="android:background">@drawable/search_button_bg_selector</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/t18sp</item>
        <item name="android:gravity">center</item>
    </style>

</resources>
