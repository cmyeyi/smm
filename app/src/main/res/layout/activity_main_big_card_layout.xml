<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_big_card_lr"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent_aa"
    android:visibility="gone"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/big_card_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/common_30dp"
        android:layout_marginTop="@dimen/common_30dp"
        android:background="@drawable/feed_back_fail" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/big_card_close"
        android:layout_gravity="bottom"
        android:layout_marginBottom="@dimen/common_30dp"
        android:layout_marginLeft="@dimen/common_30dp"
        android:layout_marginRight="@dimen/common_30dp"
        android:layout_marginTop="@dimen/common_5dp"
        android:background="@drawable/big_card_bg_withe"
        android:padding="@dimen/common_10dp"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/main_big_tv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/text_color_ff999999"
                android:textSize="@dimen/t12sp" />

        </LinearLayout>
    </ScrollView>

</RelativeLayout>