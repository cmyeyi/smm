<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/bottom_tab_rl">

    <ImageView
        android:id="@+id/tab_iv_forum"
        style="@style/bottom_tab_image"
        android:layout_above="@+id/tab_tv_forum"
        android:src="@drawable/tab_forum_icon" />

    <TextView
        android:id="@+id/tab_tv_forum"
        style="@style/bottom_tab_text"
        android:text="@string/mian_tab_2" />

    <FrameLayout
        android:id="@+id/notice_new"
        android:layout_width="@dimen/common_45dp"
        android:layout_height="@dimen/common_10dp"
        android:layout_marginTop="@dimen/common_20dp"
        android:layout_centerHorizontal="true"
        android:visibility="gone" >

        <View
            android:layout_width="@dimen/common_10dp"
            android:layout_height="@dimen/common_10dp"
            android:layout_marginLeft="@dimen/common_30dp"
            android:layout_toRightOf="@id/tab_iv_mine"
            android:background="@drawable/forum_notification_red_point_bg"/>
    </FrameLayout>

</RelativeLayout>